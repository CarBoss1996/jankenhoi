<%= t('.title')%>
<%= form_with url: game_janken_path, method: :get do %>
  <%= radio_button_tag :choice, "rock" %>
  <%= label_tag :choice_rock, I18n.t('game.new.rock') %>
  <%= radio_button_tag :choice, "scissors" %>
  <%= label_tag :choice_scissors, I18n.t('game.new.scissors') %>
  <%= radio_button_tag :choice, "paper" %>
  <%= label_tag :choice_paper, I18n.t('game.new.paper') %>
  <%= submit_tag I18n.t('game.new.start_game') %>
<% end %>
